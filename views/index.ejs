<%-include("partial/top.ejs") %>


<div class="ui main text container">
    <div class="ui huge header">Blogs</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blog.forEach(function(x){ %>
   <div class="item">
       <div class="image">
           <img src= "<%=x.image %>">
       </div>
       <div class="content">
           <a class="header" href="/blog/<%= x._id%>"><%= x.tittle%></a>
           <div class="meta">
               <span><%= x.created.toDateString() %></span>
           </div>
           <div class="description">
                <p><%- x.body.substring(0, 100) %>....</p>
           </div>
           <div class="extra">
               <a class="ui floated basic violet button" href="/blog/<%= x._id%>">
                   Read More
                   <i class="right chevron icon"></i>
               </a>
           </div>
       </div>
     </div> 
  <% }) %>
        </div>
    </div>
</div>



<%-include("partial/bottom.ejs") %>